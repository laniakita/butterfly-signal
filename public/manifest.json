{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "name": "butterfly-signal",
  "description": "An extension that illuminates a butterfly, when it detects an active web page that has it's domain registered on Bluesky.",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "butterfly-signal",
    "default_icon": {
      "32": "./icons/inactive/darkmode/bluesky-outline-darkmode-32.png"
    }   
  },
  "icons": {
    "16": "./icons/default/bluesky-leaves-and-water-jl-16.png",
    "32": "./icons/default/bluesky-leaves-and-water-jl-32.png",
    "48": "./icons/default/bluesky-leaves-and-water-jl-48.png",
    "128": "./icons/default/bluesky-leaves-and-water-jl-128.png",
    "256": "./icons/default/bluesky-leaves-and-water-jl-256.png"
  },
  "permissions": ["tabs", "webNavigation", "storage", "offscreen"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';",
    "sandboxed_pages":"script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}
